pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/username/project-01-ci-cd-jenkins.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t project01-app:${BUILD_NUMBER} .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run -d -p 5000:5000 project01-app:${BUILD_NUMBER}'
            }
        }
    }

    post {
        success {
            echo 'PROJECT 01 BUILD SUCCESS'
        }
        failure {
            echo 'PROJECT 01 BUILD FAILED'
        }
    }
}
